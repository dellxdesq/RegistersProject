{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Request": {
      "MaxBodySize": 50000000
    },
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": { "Path": "/api/v1/auth/{**catch-all}" }
      },
      "storage": {
        "ClusterId": "storage",
        "Match": { "Path": "/api/v1/storage/{**catch-all}" }
      },
      "registries": {
        "ClusterId": "registries",
        "Match": { "Path": "/api/v1/registries/{**catch-all}" }
      },
      "file-preview": {
        "ClusterId": "file-preview",
        "Match": { "Path": "/api/v1/file-preview/{**catch-all}" }
      }
    },
    "Clusters": {
      //"auth": { "Destinations": { "auth": { "Address": "http://auth-service:5000" } } },
      //"storage": { "Destinations": { "storage": { "Address": "http://storage-service:5002" } } },
      //"registries": { "Destinations": { "registries": { "Address": "http://registry-service:5004" } } }
      "auth": { "Destinations": { "auth": { "Address": "http://localhost:5000" } } },
      "storage": { "Destinations": { "storage": { "Address": "http://localhost:5002" } } },
      "registries": { "Destinations": { "registries": { "Address": "http://localhost:5004" } } },
      "file-preview": { "Destinations": { "file-preview": { "Address": "http://localhost:5008" } } }
    }
  }
}
